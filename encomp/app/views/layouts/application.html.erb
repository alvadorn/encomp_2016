    <div class="limpar"></div>
    <br>
    <div id="menu-miolo">
      <strong>Encomp</strong>

      <br>
      <br>


      <% if controller.controller_name == "users" && controller.action_name == "new" %>
      <ul>
        <li> <a href="<%= root_path %>"> <span class="glyphicon glyphicon-chevron-right"></span>&nbsp; HOME</a></li>
