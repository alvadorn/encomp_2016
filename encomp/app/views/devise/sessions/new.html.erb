<div class="float-center">
  <div class="row"><h2 class="text-center">Log in</h2></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
      <div class="small-12 columns"><%= f.label :email, class: "float-center" %><br /></div>
    </div>
    <div class="row">
      <div class="small-12 columns"><%= f.email_field :email, autofocus: true %></div>
    </div>

    <div class="row">
      <div class="small-12 columns"><%= f.label :password, class: "float-center" %><br /></div>
      <div class="small-12 columns"><%= f.password_field :password, autocomplete: "off" %></div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="row">
        <div class="small-1 large-1 columns"><%= f.check_box :remember_me %></div>
        <div class="small-11 large-11 columns"><%= f.label :remember_me, "Lembrar", class: "text-left" %></div>
      </div>
    <% end -%>

    <div class="row">
      <div class="small-12 columns">  <%= f.submit "Log in", class: "button"%></div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
