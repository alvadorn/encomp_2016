<div class="container">

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin" }) do |f| %>
  <h2 class="form-signin-heading">Login</h2>
  <br />
  <div class="form-group">
    <%= f.label :email, class: "control-label" %><br />
    <div><%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail" %></div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "control-label" %><br />
    <div><%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword" %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="checkbox">
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>Lembrar-me
      <% end %>
    </div>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
