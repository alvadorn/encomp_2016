<div class="center-block">
  <div class="row"><h2 class="col-xs-offset-2 col-xs-10">Log in</h2></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %><br />
    <div class="col-sm-10"><%= f.email_field :email, autofocus: true, class: "form-group" %></div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %><br />
    <div class="col-sm-10"><%= f.password_field :password, autocomplete: "off", class: "form-group" %></div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <%= f.check_box :remember_me %></div>
        <%= f.label :remember_me, "Lembrar", class: "" %></div>
      </div>
    </div>
  </div>

  <% end -%>

  <div class="form-group">
    <div class="col-xs-12">  <%= f.submit "Log in", class: "btn btn-primary"%></div>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
