<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Enviar email
        </h1>
    </div>
</div>
<% if notice %>
<div id="notice">
  <%= notice %>
</div>
<% end %>
<h4>Aqui você poderá enviar email para todos os inscritos.</h4>
<%= form_tag mailer_send_email_url, :method => :post, class: "col-sm-offset-3" do %>
<div class="row">
  <p>Assunto:</p>
</div>
<div class="row">
  <%= text_field_tag("title", nil, size: 50, placeholder: "Assunto do email") %>
</div>
<div class="row">
  <p>Corpo do Email:</p>
</div>
<div class="row">
  <%= text_area_tag("body", nil, cols: 50, rows: 20, placeholder: "Corpo do email", escape: false, style: "resize: none;") %>
</div>
  <%= submit_tag("Enviar Email", data: { confirm: "Você deseja realmente enviar este email para todos os inscritos?" } ) %>
<% end %>
